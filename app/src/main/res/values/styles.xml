<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="activity_header_title_style">
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:padding">@dimen/padding_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Son_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>
    <style name="edittext_s_style">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">@color/c_black</item>
    </style>
    <!--动画-->
    <style name="RightInRightOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>

        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="Animation_RightInRightOutActivity" parent="android:Theme.Light">
        <item name="android:windowAnimationStyle">@style/RightInRightOutAnim</item>
    </style>

</resources>