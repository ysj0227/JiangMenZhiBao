<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnUploadCk"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/bg_submit_button_selector"
            android:text="@string/button_upload_ck"
            android:textColor="@color/c_white"
            android:textSize="@dimen/size_18" />

        <Button
            android:id="@+id/btnUploadTh"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/bg_submit_button_selector"
            android:text="@string/button_upload_th"
            android:textColor="@color/c_white"
            android:textSize="@dimen/size_18"
             />
    </LinearLayout>


</LinearLayout>
