<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"></RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@mipmap/ic_white_kuang">

        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="原始密码:" />

        <com.winsafe.jiangmenzhibao.utils.EmojiEditText
            android:id="@+id/etOldPSD"
            android:layout_toRightOf="@+id/tv0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:background="@android:color/transparent"
            android:hint="请输入原始密码"
            android:paddingLeft="3dp"
            android:password="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@mipmap/ic_white_kuang">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="    新密码:" />

        <com.winsafe.jiangmenzhibao.utils.EmojiEditText
            android:id="@+id/etNewPSD"
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:background="@android:color/transparent"
            android:hint="请输入新密码"
            android:paddingLeft="3dp"
            android:password="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@mipmap/ic_white_kuang">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="确认密码:" />

        <com.winsafe.jiangmenzhibao.utils.EmojiEditText
            android:id="@+id/etNewPSD_Again"
            android:layout_toRightOf="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:background="@android:color/transparent"
            android:hint="请输入确认新密码"
            android:paddingLeft="3dp"
            android:password="true"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_submit_button_selector2"
            android:text="@string/button_reset"
            android:textColor="@color/c_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnGetPsd"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_submit_button_selector"
            android:text="@string/button_sure"
            android:textColor="@color/c_white"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>